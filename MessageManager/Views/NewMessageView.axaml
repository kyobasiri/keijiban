<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MessageManager.ViewModels"
             xmlns:converters="clr-namespace:MessageManager.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="250"
             x:Class="MessageManager.Views.NewMessageView"
             x:DataType="vm:NewMessageViewModel">

  <UserControl.Resources>
    <converters:PriorityToStringConverter x:Key="PriorityToStringConverter"/>
    <converters:DateTimeOffsetToDateTimeConverter x:Key="DateTimeOffsetConverter"/>
  </UserControl.Resources>

  <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1"
          CornerRadius="4" Padding="15" Margin="0,0,0,10">
    <Grid ColumnDefinitions="Auto,*">
      <Border Grid.Column="0" Background="#4682B4" CornerRadius="3" Padding="8,4"
              VerticalAlignment="Top" Margin="0,4,15,0">
        <TextBlock Text="新規メッセージ作成" FontWeight="Bold" FontSize="16" Foreground="White"/>
      </Border>

      <Grid Grid.Column="1" ColumnDefinitions="2*, 1.5*, 0.8*">
        <Grid Grid.Column="0" RowDefinitions="Auto,*" Margin="0,0,10,0">
          <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,Auto,*" Margin="0,0,0,8">
            <StackPanel Grid.Column="0" Margin="0,0,10,0" MinWidth="150">
              <TextBlock Text="宛先部署*" FontWeight="Bold" Margin="0,0,0,2" FontSize="12"/>
              <ComboBox ItemsSource="{Binding Departments}"
                        PlaceholderText="宛先部署を選択"
                        Padding="6" Margin="0,0,0,4" FontSize="12">
                <ComboBox.ItemTemplate>
                  <DataTemplate x:DataType="vm:DepartmentViewModel">
                    <StackPanel Orientation="Horizontal">
                      <Button Content="追加"
                              Background="#007bff" Foreground="White" BorderThickness="0"
                              CornerRadius="4" Padding="8,4" Margin="2" FontSize="11"
                              Command="{Binding AddRecipientCommand}"/>
                      <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,10,0">
              <TextBlock Text="優先度" FontWeight="Bold" Margin="0,0,0,2" FontSize="12"/>
              <ComboBox ItemsSource="{Binding PriorityOptions}"
                        SelectedItem="{Binding SelectedPriority}"
                        Padding="6" Margin="0,0,0,4" FontSize="12">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource PriorityToStringConverter}}"/>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="0,0,10,0">
              <TextBlock Text="回答期限" FontWeight="Bold" Margin="0,0,0,2" FontSize="12"/>
              <CalendarDatePicker SelectedDate="{Binding DueDate, Converter={StaticResource DateTimeOffsetConverter}}"
                                  Margin="0,0,0,6" FontSize="12"
                                  Watermark="日付を選択..."/>
            </StackPanel>

            <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="10,0,0,0">
              <CheckBox IsChecked="{Binding RequiresAction}" FontSize="11" Margin="0,10,0,0">
                <TextBlock Text="受信者の対応を要求する"/>
              </CheckBox>
            </StackPanel>
          </Grid>

          <StackPanel Grid.Row="1">
            <TextBlock Text="選択された宛先" FontWeight="Bold" Margin="0,8,0,2" FontSize="12"/>
            <ScrollViewer Height="60" VerticalScrollBarVisibility="Auto">
              <ItemsControl ItemsSource="{Binding SelectedRecipients}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate x:DataType="vm:RecipientViewModel">
                    <Border Background="#E3F2FD" CornerRadius="4" Padding="6,3" Margin="0,0,4,3">
                      <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="11"/>
                        <Button Background="Transparent" Foreground="Red"
                                BorderThickness="0" Padding="3,0" Margin="4,0,0,0"
                                Command="{Binding RemoveRecipientCommand}" FontSize="10">
                          <TextBlock Text="×"/>
                        </Button>
                      </StackPanel>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <WrapPanel/>
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
              </ItemsControl>
            </ScrollViewer>
          </StackPanel>
        </Grid>

        <StackPanel Grid.Column="1" Margin="10,0,10,0">
          <TextBlock Text="件名*" FontWeight="Bold" Margin="0,0,0,2" FontSize="12"/>
          <TextBox Text="{Binding MessageSubject}"
                   Watermark="件名を入力してください"
                   Padding="6" Margin="0,0,0,8" FontSize="12"/>
          <TextBlock Text="本文*" FontWeight="Bold" Margin="0,0,0,8" FontSize="12"/>
          <TextBox Text="{Binding MessageContent}"
                   AcceptsReturn="True"
                   TextWrapping="Wrap"
                   Height="80" Padding="6" FontSize="12"
                   Watermark="メッセージ本文を入力してください"/>
        </StackPanel>

        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,0,0,0">
          <Button Background="#ffc107" Foreground="Black" BorderThickness="0"
                  CornerRadius="4" Padding="10,12" Margin="0,0,0,10"
                  Command="{Binding ClearFormCommand}">
            <TextBlock Text="クリア" FontSize="16" FontWeight="Bold"/>
          </Button>
          <Button Background="#28a745" Foreground="White" BorderThickness="0"
                  CornerRadius="4" Padding="10,24"
                  Command="{Binding SendMessageCommand}">
            <TextBlock Text="送信" FontSize="18" FontWeight="Bold"/>
          </Button>
        </StackPanel>
      </Grid>
    </Grid>
  </Border>
</UserControl>
